[alias]
  aa = add .
  # stage modified (not new files)
  au = add -u
  b = branch
  ci = commit --verbose
  cia = commit --verbose --all
  co = checkout
  d = diff --color
  ds = diff --color --staged
  graph = log --graph --pretty=oneline --abbrev-commit
  m = commit -avm
  rollback = reset --soft HEAD^
  s = status
  ss = status -uno
  outgoing = log origin/master..HEAD
  mergex = merge --no-ff

[branch]
  autosetupmerge = always

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
  name = Felix Hummel
  email = felix@felixhummel.de
