[alias]
  aa = add .
  # stage modified (not new files)
  au = add -u
  b = branch
  ci = commit --verbose
  cia = commit --verbose --all
  co = checkout
  d = diff --color
  ds = diff --color --staged
  graph = log --graph --pretty=oneline --abbrev-commit
  # http://coderwall.com/p/euwpig?i=3&p=1&t=git
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold white)<%an>%Creset' --abbrev-commit
  m = commit -avm
  rollback = reset --soft HEAD^
  s = status
  ss = status -uno
  outgoing = log origin/master..HEAD
  mergex = merge --no-ff

[branch]
  autosetupmerge = always

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

