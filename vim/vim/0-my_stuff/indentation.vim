set tabstop=4
set softtabstop=4 " compatability with mix of tabs and spaces
set shiftwidth=4 " for >> and <<
set smarttab " delete indent with <BS>
set expandtab  " always insert spaces
set nosmartindent " don't need it - see next line
filetype plugin indent on  " enable filetype based indentation (see $VIMRUNTIME/indent)
